<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->


<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/add-user" class="border-shadow">
                <span class="text-gradient">New User <i class="fas fa-user"></i></span>
            </a>
        </div>
        <!-- Search Box -->
        <div class="search-box">
            <form id="search-form" action="/" method="POST">
                <input type="text" id="search-input" placeholder="Search...">
                <button type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </form>
        </div>
        <a href="/backup" class="border-shadow">
            <span class="text-gradient">Backup <i class="fas fa-download"></i></span>
        </a>
        <!-- form handling -->
        <form action="/" method="POST">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Article_body</th>
                        <th>Author</th>
                        <th>Publish_Date</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    <%- include('include/_show') %>
                </tbody>
            </table>
        </form>
    </div>
</main>
<!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->